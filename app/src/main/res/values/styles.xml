<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="AppTextCategory"  parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">@dimen/category_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/category_margin_bottom</item>
        <item name="android:gravity">left</item>
        <item name="android:fontFamily">@font/nanum_gothic_eb</item>
    </style>

    <style name="AppTextCategoryInfo"  parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">@dimen/category_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/category_margin_bottom</item>
        <item name="android:gravity">left</item>
        <item name="android:fontFamily">@font/nanum_gothic_b</item>
    </style>

    <style name="AppTextMenuName"  parent="@android:style/Widget.TextView">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textSize">32sp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/nanum_gothic_eb</item>
    </style>

    <style name="AppTextMenuTitle"  parent="@android:style/Widget.TextView">
        <item name="android:textColor">#000000</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textSize">32sp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/nanum_gothic_eb</item>
    </style>

    <style name="AppButtonLong"  parent="Widget.AppCompat.Button">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textSize">24sp</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/nanum_gothic</item>
    </style>


</resources>